{{#if addNewAnswer}}
  <div>
    <form>
      <div class="form-group">
        <label for="author">Your name</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="contents">Your answer</label>
        {{input value=contents id="contents"}}
      </div>
      <button {{action 'save1'}}>Answer</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>Add Answer</button>
  <hr>
{{/if}}
