{{#if updateQuestionForm}}
  <div class="updateQuestionForm">
    <h3>Edit this question below.</h3>
    <form class="form">

      <div class="form-group">
        <label for="author">What is your name?</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="title">What is your new question?</label>
        {{textarea value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="notes">Additional notes</label>
        {{textarea value=notes id="notes"}}
      </div>

      <button {{action 'update' question}}>Update Question</button>
    </form>
  </div>
{{else}}
  <button {{action 'showForm'}}>Update this question</button>
{{/if}}

<button {{action 'addToFavorites' question}}>Add to Favorites</button>
